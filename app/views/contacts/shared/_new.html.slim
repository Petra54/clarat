- reporting = contact.reporting?
= simple_form_for contact, html: { class: 'contact-form' }, remote: true do |f|
  - if reporting
    p= t('.send_us_a_message')
  = f.input :name, label: false,
                   input_html: { placeholder: t('.name_placeholder') }
  = f.input :email, label: false,
                    required: !reporting,
                    input_html: { \
                      placeholder: \
                        t(".email_placeholder.required.#{!reporting}") }
  = f.input :message, label: false,
                      input_html: { placeholder: t('.message_placeholder') }
  = f.input :url, as: :hidden
  = f.input :reporting, as: :hidden
  button.Contact-Submit.JS-Single-Click-Button
    = t '.send'
